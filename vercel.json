{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist/public",
  "installCommand": "npm install --legacy-peer-deps",
  "framework": null,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {},
  "env": {
    "NODE_ENV": "production"
  },
  "crons": [
    {
      "path": "/api/backup/cron",
      "schedule": "0 2 * * *"
    }
  ]
}
